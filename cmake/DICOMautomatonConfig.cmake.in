# DICOMautomatonConfig.cmake.in
#
# CMake package configuration file for DICOMautomaton.
# This file is installed alongside DICOMautomaton libraries so downstream
# CMake projects can find and use installed DICOMautomaton components via:
#
#   find_package(DICOMautomaton REQUIRED)
#   target_link_libraries(my_target DICOMautomaton::imebrashim)
#

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Propagate required upstream dependencies so find_package consumers don't
# need to locate them separately.
find_dependency(Threads REQUIRED)
find_dependency(Boost REQUIRED COMPONENTS serialization iostreams thread)

# Include the exported targets file generated by install(EXPORT ...).
include("${CMAKE_CURRENT_LIST_DIR}/DICOMautomatonTargets.cmake")

check_required_components(DICOMautomaton)
