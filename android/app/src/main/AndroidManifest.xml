<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissions needed for network access and storage (if loading DICOM files) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Require OpenGL ES 3.0 -->
    <uses-feature android:glEsVersion="0x00030000" android:required="true" />

    <application
        android:label="@string/app_name"
        android:hasCode="true"
        android:icon="@mipmap/ic_launcher"
        android:allowBackup="false"
        android:hardwareAccelerated="true">

        <!--
            GameActivity-based activity.
            The native library 'dcma_sdl_viewer' is loaded by GameActivity.
            SDL_main() is the C++ entry point invoked by the SDL Android glue.
        -->
        <activity
            android:name="ca.halclark.dicomautomaton.MainActivity"
            android:exported="true"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:screenOrientation="unspecified"
            android:launchMode="singleTask">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Provide the native library name to GameActivity -->
            <meta-data
                android:name="android.app.lib_name"
                android:value="dcma_sdl_viewer" />
        </activity>
    </application>

</manifest>
